@using VendorPage.Models;
@{
  Layout = "_Layout";
}

<h3>Here are the vendor details and standing orders for this vendor:</h3>
<h4>Account description: @Model["vendor"].Description </h4>

<ol>
@foreach (Order order in @Model["orders"])
{
  <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Description</a></li>
}
</ol>


<p><a href='/vendors/@Model["vendor"].Id/orders/new'>Place a new order</a></p>
<p><a href='/vendors'>Return to vendors page</a></p>
<p><a href='/'>Home Page</a></p>

